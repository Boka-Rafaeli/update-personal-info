{
  "name": "temp-playwright",
  "version": "1.0.0",
  "description": "Modern Playwright E2E framework boilerplate with POM, Allure reporting, and multi-env support",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:dev": "ENV=dev playwright test",
    "test:stage": "ENV=stage playwright test",
    "test:prod": "ENV=prod playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "report:allure": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "report:html": "playwright show-report",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\" \"tests/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\" \"tests/**/*.{ts,tsx,json}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": ["playwright", "e2e", "testing", "typescript", "pom"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "allure-playwright": "^2.13.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
